{
  "name": "sample-web-app",
  "version": "0.1.0",
  "description": "Sample Web Application",
  "main": "dist/server.js",
  "repository": "",
  "private": true,
  "author": "",
  "scripts": {
    "start": "node bin/www",
    "build": "babel server --out-dir dist/server --copy-files --source-maps",
    "watch": "babel server --out-dir dist/server --watch --copy-files --source-maps",
    "themost": "themost"
  },
  "devDependencies": {

  },
  "peerDependencies": {
    "@themost/common": "^2.3.1",
    "@themost/query": "^2.3.1",
    "@themost/data": "^2.3.5",
    "@themost/sqlite": "^2.2.1",
    "@themost/web": "^2.3.2",
    "@themost/xml": "^2.3.1",
    "@themost/node": "^2.2.1"
  },
  "dependencies": {
  },
  "nodemonConfig": {
    "watch": [
      "server",
      "bin"
    ],
    "verbose": true,
    "legacy-watch": true,
    "execMap": {
      "js": "node --require @babel/register"
    },
    "env": {
      "NODE_ENV": "development"
    },
    "ext": "js,json"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "env": {
      "browser": false,
      "node": true,
      "es6": true,
      "jquery": false
    },
    "globals": {
      "describe": false,
      "it": false,
      "angular": false,
      "jQuery": false,
      "before": false,
      "after": false
    },
    "extends": "eslint:recommended",
    "rules": {
      "no-console": "warn",
      "no-invalid-this": "warn",
      "no-undef": "error",
      "no-unused-vars": "warn",
      "no-var": [
        "error"
      ],
      "strict": [
        2,
        "never"
      ]
    }
  }
}
